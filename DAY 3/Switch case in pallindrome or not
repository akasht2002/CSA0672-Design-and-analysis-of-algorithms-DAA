#include<stdio.h>
int main()

{
	int cho;
	printf("Enter a choice:");
	scanf("%d",&cho);
	if(cho==1)
	{
    	char val[25];
    	printf("enter the value: ");
    	scanf("%s",&val);
    	int count=0,c=0;  
    	while (val[count]!='\0'){
        	count++;
        	c++;
    	}c++;
     
    
    for(int i=count-1;i>=0;i--){
        c++;
        printf("%c",val[i]);
    }c++;
    printf("\ntime complexity: %d",c);
}
else if(cho==2)
{

    	int n, reverse = 0, remainder;

  printf("Enter an integer: ");
  scanf("%d", &n);

  while (n != 0) {
    remainder = n % 10;
    reverse = reverse * 10 + remainder;
    n /= 10;
  }

  printf("Reversed number = %d", reverse);
}
else
{
	printf("invalid case");
}
return 0;
}
